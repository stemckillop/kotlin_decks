<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:background="#ffffff"
        android:elevation="4dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/tW"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/color_ident_white"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/tU"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/color_ident_blue"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/tB"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/color_ident_black"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/tR"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/color_ident_red"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/tG"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/color_ident_green"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/tA"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/color_ident_colorless"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/card_vintage_tag"
                    style="@style/Vintage"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="16dp"
                    android:gravity="center"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/card_modern_tag"
                    style="@style/ModernTag"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="16dp"
                    android:gravity="center"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/card_commander_tag"
                    style="@style/CommanderTag"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="16dp"
                    android:gravity="center"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/card_legacy_tag"
                    style="@style/LegacyTag"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="16dp"
                    android:gravity="center"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/card_standard_tag"
                    style="@style/StandardTag"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="16dp"
                    android:gravity="center"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Games"
                    android:textAlignment="center"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/card_game_counter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Last Result"
                    android:textAlignment="center"
                    android:textSize="8sp" />

                <ImageView
                    android:id="@+id/card_prev_result"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:src="@drawable/first_place" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="Deck Name"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/card_deck_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="24sp"
            android:autoSizeMinTextSize="18sp"
            android:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/card_deck_commander_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="Commander"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/card_deck_commander"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" />

        <TextView
            android:id="@+id/card_deck_info_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="Deck Strategy"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/card_deck_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:lines="2" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/card_button_list"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:text="Deck List"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/card_button_history"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/deck_game_button"
                android:text="Game History"
                android:textColor="@android:color/white" />

            <ImageButton
                android:id="@+id/card_button_add_history"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@drawable/deck_game_button"
                android:src="@drawable/add"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/card_button_modify"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@drawable/deck_menu_button"
                android:src="@drawable/menu"
                android:tint="@android:color/white" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>