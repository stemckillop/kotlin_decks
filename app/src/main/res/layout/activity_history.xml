<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HistoryActivity">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="100dp"
        android:background="@color/colorAccent">

    </RelativeLayout>

    <TextView android:layout_margin="8dp" android:layout_width="match_parent"
        android:layout_height="26dp"
        android:text="Games Played:"
        android:gravity="center_vertical"/>

    <ListView
        android:id="@+id/history_game_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/list_game_history">

    </ListView>

</LinearLayout>